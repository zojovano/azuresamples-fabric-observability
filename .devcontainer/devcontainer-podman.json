{
    "name": "Azure Fabric Observability DevContainer (Podman WSL Optimized)",
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bullseye",
    
    "features": {
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/dotnet:1": {
            "version": "8.0"
        },
        "ghcr.io/devcontainers/features/powershell:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    },
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.azure-account",
                "ms-azuretools.vscode-bicep",
                "ms-azuretools.vscode-azureresourcegroups",
                "ms-python.python",
                "ms-dotnettools.csharp",
                "ms-vscode.powershell",
                "redhat.vscode-yaml",
                "ms-vscode.vscode-json",
                "github.vscode-pull-request-github",
                "github.copilot"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.formatting.provider": "black",
                "files.associations": {
                    "*.bicep": "bicep",
                    "*.kql": "kusto"
                },
                "remote.containers.defaultExtensions": [
                    "ms-vscode.azure-account"
                ]
            }
        }
    },

    "forwardPorts": [8080, 5000, 8888],
    "postCreateCommand": ".devcontainer/post-create.sh",

    "remoteUser": "vscode",
    "containerUser": "vscode",
    
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
        "source=/tmp,target=/tmp,type=bind"
    ],
    
    "runArgs": [
        "--userns=keep-id",
        "--security-opt=label=disable",
        "--cap-add=SYS_PTRACE",
        "--init",
        "--hostname=devcontainer"
    ],
    
    "containerEnv": {
        "PYTHONPATH": "/workspace",
        "AZURE_SUBSCRIPTION_ID": "${localEnv:AZURE_SUBSCRIPTION_ID}",
        "AZURE_TENANT_ID": "${localEnv:AZURE_TENANT_ID}",
        "WSL_DISTRO_NAME": "${localEnv:WSL_DISTRO_NAME}",
        "BUILDAH_ISOLATION": "chroot",
        "CONTAINER_HOST": "unix:///run/user/1000/podman/podman.sock",
        "XDG_RUNTIME_DIR": "/run/user/1000"
    },
    
    "workspaceFolder": "/workspace",
    "shutdownAction": "stopContainer",
    "overrideCommand": false,
    "privileged": false,
    "init": true,
    
    "capAdd": ["SYS_PTRACE"],
    "securityOpt": ["label=disable"]
}
