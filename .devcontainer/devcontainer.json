{
    "name": "Azure Fabric Observability DevContainer",
    "image": "mcr.microsoft.com/devcontainers/dotnet:8.0-jammy",

    "features": {
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/powershell:1": {
            "version": "7.5.3"
        },
        // PowerShell 7.5.3 installed via post-create script for latest version
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11",
            "installTools": false
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                // Azure extensions
                "ms-vscode.azure-account",
                "ms-azuretools.azure-dev",
                "ms-azuretools.vscode-azureresourcegroups",
                "ms-azuretools.vscode-bicep",

                // Docker and Kubernetes
                "ms-azuretools.vscode-docker",

                // .NET development
                "ms-dotnettools.csharp",
                "ms-dotnettools.csdevkit",

                // PowerShell
                "ms-vscode.powershell",

                // YAML and JSON
                "redhat.vscode-yaml",
                "ms-vscode.vscode-json",

                // Git and GitHub
                "github.vscode-pull-request-github",
                "github.copilot",
                "github.copilot-chat",

                // Other useful extensions
                "ms-vscode.vscode-markdown",
                "streetsidesoftware.code-spell-checker"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "files.associations": {
                    "*.bicep": "bicep",
                    "*.kql": "kusto"
                }
            }
        }
    },

    // Use 'forwardPorts' to make a list of ports inside the container available locally
    "forwardPorts": [
        8080,  // Common web port
        5000   // .NET development
    ],

    // Use 'postCreateCommand' to run commands after the container is created
    "postCreateCommand": ".devcontainer/post-create.sh",

    // Configure user and security
    "remoteUser": "vscode",
    "containerUser": "vscode",

    // Mount additional volumes - Simplified for WSL compatibility
    "mounts": [],

    // Simplified run arguments for better compatibility
    "runArgs": [],

    // Environment variables
    "containerEnv": {
        "AZURE_SUBSCRIPTION_ID": "${localEnv:AZURE_SUBSCRIPTION_ID}",
        "AZURE_TENANT_ID": "${localEnv:AZURE_TENANT_ID}",
        "GIT_USER_NAME": "${localEnv:GIT_USER_NAME}",
        "GIT_USER_EMAIL": "${localEnv:GIT_USER_EMAIL}"
    }

}
